<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/item_issue_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="1、加载中" />

    <LinearLayout
        android:id="@+id/item_issue_optionA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_issue_optionA_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/exercises_a" />

        <TextView
            android:id="@+id/item_issue_optionA_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text=".exe" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_issue_optionB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_issue_optionB_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/exercises_b" />

        <TextView
            android:id="@+id/item_issue_optionB_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text=".exe" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_issue_optionC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_issue_optionC_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/exercises_c" />

        <TextView
            android:id="@+id/item_issue_optionC_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text=".exe" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_issue_optionD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_issue_optionD_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/exercises_d" />

        <TextView
            android:id="@+id/item_issue_optionD_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text=".exe" />

    </LinearLayout>

</LinearLayout>
